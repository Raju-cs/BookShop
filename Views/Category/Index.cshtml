@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<style>
        table {
            width: 90%; /* Adjusted the width */
            max-width: 1000px; /* Set a maximum width */
            border-collapse: collapse;
            margin: 20px auto;
            font-family: Arial, sans-serif;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        th {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            font-size: 1rem;
            text-align: center;
        }
        td {
            padding: 10px;
            text-align: center;
            font-size: 0.9rem;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        tr:nth-child(odd) {
            background-color: #ffffff;
        }
        tr:hover {
            background-color: #ddd;
        }

    .set_Padd{
        padding-left: 65px;
    }

    .btn_category {
        padding-left: 297px;
    }
    </style>

<div class="container p-3">
    <div class="row pt-4">
     <div class="col-6 set_Padd">
         <h2 class="text-primary">Category List</h2>
     </div>
     <div class="col-6 btn_category">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp; Create Mew Category</a>
     </div>
    </div>



<table border="1">
    <tr>
        <th>Name</th>
        <th>Display Order</th>
        <th></th>
    </tr>

    @foreach(var obj in Model)
    {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <div class="btn-group" role="group">
                <a asp-controller="Category" asp-action="edit" asp-route-id = "@obj.Id" class="btn btn-primary mx-0"><i class="bi bi-pencil-square"></i>Edit</a>
                </div>
                    <div class="btn-group" role="group">
                        <a asp-controller="Category" asp-action="delete" asp-route-id="@obj.Id" class="btn btn-danger mx-0"><i class="bi bi-trash"></i>Delete</a>
                    </div>
            </td>
        </tr>
    }
 
</table>
</div>